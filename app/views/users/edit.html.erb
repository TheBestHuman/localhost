<%= form_for @user, :html => {:multipart => true } do |f| %>
  <% if @user.errors.any? %>
    <div id="alert-message error">
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
  	
	<ul class="unstyled">
		<li>Email Address: <%= @user.email %></li>
		
	    <li><%= f.label :first_name, "First Name" %><%= f.text_field :first_name %>
	    <li><%= f.label :last_name, "Last Name" %><%= f.text_field :last_name %>
    	<li><%= f.label :city, "City" %><%= f.text_field :city %></li>
		<li><%= f.label :state, "State" %><%= f.select :state, Carmen::states('US') %></li>
	    <li>&nbsp;</li>
		<% if permitted_to? :edit, @user.roles %>
			<% for role in Role.all %>
				<%= check_box_tag "user[role_ids][]", role.id, @user.roles.include?(role) %>
				<%=h role.name %><br />
			<% end %>
		<% end %>
		<li><%= f.submit 'Submit', :class=> "btn" %></li>
	</ul>
    
  </div>
<% end %>
