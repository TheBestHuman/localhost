<div class="Clear">
	<div class="star-rating-readonly"></div>
	<% 	counter = 0 %>
	<% offset = [0, -4, -8, -13] %>
	<% (1..@user.rating).each do |num| %>
		<% counter = 0 if counter == 4 %>
		<div class="star-rating rater-5 star {split:4} star-rating-applied star-rating-readonly star-rating-on" style="width: 4px;">
			<span class="star-rating-control"><a title="<%= num %>" style="margin-left: <%= offset[counter] %>px;"><%= num %></a></span>
		</div>
		<% counter+= 1 %>
	<% end %>
	
	<% (@user.rating+1..20).each do |num| %>
		<% counter = 0 if counter == 4 %>
		<div class="star-rating rater-5 star {split:4} star-rating-applied star-rating-readonly" style="width: 4px;">
			<span class="star-rating-control"><a title="<%= num %>" style="margin-left: <%= offset[counter] %>px;"><%= num %></a></span>
		</div>
		<% counter+= 1 %>
	<% end %>
</div>
