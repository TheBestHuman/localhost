<h1>Listing Users</h1>

<table>
  <tr>
    <th>Name</th>
	<th>Email</th>
	<th>State</th>
  <th>Role</th>
  <th></th>
  <th></th>
  <th></th>
  </tr>

<% @user.each do |user| %>
    <tr>
      <td><%= link_to "#{user.first_name} #{user.last_name}", user_path(user) %></td>
      <td><%= user.email%></td>
      <td><%= user.state %></td>
      <td><%= user.role %></td>
      <% if current_user.friends.find_by_id(user) %>
        <td>Friend</td>
      <% else %>
        <td><%= button_to "Add Friendship", friendships_path(:friend_id => user), :method => :post if current_user %></td>
      <% end %>
      <td><%= link_to 'Edit', edit_user_path(user) if current_user %></td>
      <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete if current_user%></td>
      
    </tr>
<% end %>
</table>
